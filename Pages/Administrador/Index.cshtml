            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstaAtiva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desconto)
            </td>
