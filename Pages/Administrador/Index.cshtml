            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roupa[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roupa[0].Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roupa[0].Preco)
