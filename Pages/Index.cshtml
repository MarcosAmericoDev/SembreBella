@page
@model SempreBella.Pages.IndexModel
@using System.Globalization;
@{
    ViewData["Title"] = "Início - Sempre Bella";
}

<style>
    .floating-btn {
        position: fixed;
        bottom: 50px;
        right: 50px;
        background-color: #ff8fab;
        color: black;
        padding: 10px 35px 10px 30px;
    }

        .floating-btn:hover {
            background-color: #F5BABB;
            color: black;
        }
</style>


<div class="container my-5">
    <h1 class="text-center mb-4">Produtos em Destaque</h1>

    <!-- GRID DE PRODUTOS -->
    <!-- row-cols-* define a responsividade: 1 coluna no mobile, 2 no tablet pequeno, 3 no médio, 4 no desktop -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model.Roupas)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <!-- 1. Imagem (que é um link) -->
                    <a href="#">
                        <img src="@item.ImagemUrl"
                             class="card-img-top"
                             alt="@item.Nome"
                             style="height: 300px; object-fit: cover;"
                             onerror="this.onerror=null;this.src='https://placehold.co/300x300/CCCCCC/333333?text=SempreBella';" />
                    </a>

                    <div class="card-body d-flex flex-column">
                        <!-- 2. Nome do Produto -->
                        <h5 class="card-title">@item.Nome</h5>

                        <!-- 3. Área de Preços -->
                        <div class="mt-auto">
                            @if (item.Desconto.HasValue && item.Desconto.Value > 0)
                            {
                                <!-- Preço Original Riscado e Desconto -->
                                <p class="card-text text-muted mb-0">
                                    <span class="text-decoration-line-through me-2">
                                        @item.PrecoOriginalFormatado
                                    </span>
                                    <span class="badge bg-danger">@item.Desconto.Value% OFF</span>
                                </p>
                                <!-- Preço Após Desconto (Preço Final) -->
                                <p class="card-text fs-4 text-success fw-bold">
                                    @item.PrecoFinalFormatado
                                </p>
                            }
                            else
                            {
                                <!-- Preço Normal -->
                                <p class="card-text fs-5 text-dark fw-bold">
                                    @item.PrecoOriginalFormatado
                                </p>
                            }
                        </div>
                    </div>

                    <!-- Botão de Comprar (Exemplo) -->
                    <button class="btn btn-primary w-100 border-black"
                            style="background-color: #ff8fab; color: black;"
                            onclick="addToCart({
                                id: @item.Id,
                                name: '@item.Nome',
                                price: @item.PrecoNumerico.ToString(CultureInfo.InvariantCulture),
                                image: '@item.ImagemUrl'
                            })">
                        Adicionar ao Carrinho
                    </button>

                </div>
            </div>
        }
    </div>

    <!-- Mensagem caso não haja produtos -->
    @if (!Model.Roupas.Any())
    {
        <div class="alert alert-info text-center mt-5" role="alert">
            Nenhum produto disponível para visualização no momento.
        </div>
    }

    <a id="cart-button"
       class="btn btn-primary floating-btn border-black position-fixed"
       data-bs-toggle="modal"
       data-bs-target="#cartModal"
       onclick="renderCart()">
        <i class="bi bi-cart"></i>
        Carrinho
        <span id="cart-count"
              class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-dark">
            0
        </span>
    </a>

    <!-- Modal do Carrinho -->
    <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content" style="border-radius: 20px;">
                <div class="modal-header">
                    <h5 class="modal-title">🛍️ Seu Carrinho</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <!-- 🛒 Coluna dos produtos -->
                        <div class="col-lg-7 border-end">
                            <div id="cart-items"></div>
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <h5 class="mb-0">Total:</h5>
                                <strong class="fs-5" id="cart-total">R$0,00</strong>
                            </div>
                        </div>

                        <!-- 👤 Coluna dos dados do cliente -->
                        <div class="col-lg-5">
                            <form id="checkout-form" class="mt-2">
                                <div class="mb-2">
                                    <input type="text" id="nome" class="form-control rounded-pill" placeholder="Nome Completo" required>
                                </div>
                                <div class="mb-2">
                                    <input type="tel" id="telefone" class="form-control rounded-pill" placeholder="Telefone" required>
                                </div>
                                <div class="mb-2">
                                    <input type="text" id="estado" class="form-control rounded-pill" placeholder="Estado" required>
                                </div>
                                <div class="mb-2">
                                    <input type="text" id="cidade" class="form-control rounded-pill" placeholder="Cidade" required>
                                </div>
                                <div class="mb-2">
                                    <input type="text" id="rua" class="form-control rounded-pill" placeholder="Rua" required>
                                </div>
                                <div class="mb-2">
                                    <input type="text" id="numero" class="form-control rounded-pill" placeholder="Número" required>
                                </div>
                                <div class="mb-3">
                                    <input type="text" id="complemento" class="form-control rounded-pill" placeholder="Complemento (opcional)">
                                </div>

                                <button type="button" id="btn-finalizar" class="btn btn-success w-100 rounded-pill fw-bold"
                                        style="background-color: #25D366; border: none;">
                                    Finalizar Pedido <i class="bi bi-whatsapp"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
