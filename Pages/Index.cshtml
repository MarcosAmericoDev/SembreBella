@page
@model SempreBella.Pages.IndexModel

@{
    ViewData["Title"] = "Início - Sempre Bella";
}

<style>
    .floating-btn {
        position: fixed;
        bottom: 50px;
        right: 50px;
        background-color: #ff8fab;
        color: black;
        padding: 10px 35px 10px 30px;
    }

        .floating-btn:hover {
            background-color: #F5BABB;
            color: black;
        }
</style>


<div class="container my-5">
    <h1 class="text-center mb-4">Produtos em Destaque</h1>

    <!-- GRID DE PRODUTOS -->
    <!-- row-cols-* define a responsividade: 1 coluna no mobile, 2 no tablet pequeno, 3 no médio, 4 no desktop -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model.Roupas)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <!-- 1. Imagem (que é um link) -->
                    <a href="#">
                        <img src="@item.ImagemUrl"
                             class="card-img-top"
                             alt="@item.Nome"
                             style="height: 300px; object-fit: cover;"
                             onerror="this.onerror=null;this.src='https://placehold.co/300x300/CCCCCC/333333?text=SempreBella';" />
                    </a>

                    <div class="card-body d-flex flex-column">
                        <!-- 2. Nome do Produto -->
                        <h5 class="card-title">@item.Nome</h5>

                        <!-- 3. Área de Preços -->
                        <div class="mt-auto">
                            @if (item.Desconto.HasValue && item.Desconto.Value > 0)
                            {
                                <!-- Preço Original Riscado e Desconto -->
                                <p class="card-text text-muted mb-0">
                                    <span class="text-decoration-line-through me-2">
                                        @item.PrecoOriginalFormatado
                                    </span>
                                    <span class="badge bg-danger">@item.Desconto.Value% OFF</span>
                                </p>
                                <!-- Preço Após Desconto (Preço Final) -->
                                <p class="card-text fs-4 text-success fw-bold">
                                    @item.PrecoFinalFormatado
                                </p>
                            }
                            else
                            {
                                <!-- Preço Normal -->
                                <p class="card-text fs-5 text-dark fw-bold">
                                    @item.PrecoOriginalFormatado
                                </p>
                            }
                        </div>
                    </div>

                    <!-- Botão de Comprar (Exemplo) -->
                    <button class="btn btn-primary w-100 border-black"
                            style="background-color: #ff8fab; color: black;"
                            onclick="addToCart({
                                                id: @item.Id,
                                                name: '@item.Nome',
                                                price: '@item.PrecoNumerico',
                                                image: '@item.ImagemUrl'
                                                })">
                        Adicionar ao Carrinho
                    </button>

                </div>
            </div>
        }
    </div>

    <!-- Mensagem caso não haja produtos -->
    @if (!Model.Roupas.Any())
    {
        <div class="alert alert-info text-center mt-5" role="alert">
            Nenhum produto disponível para visualização no momento.
        </div>
    }

    <a class="btn btn-primary floating-btn border-black" data-bs-toggle="modal" data-bs-target="#cartModal" onclick="renderCart()">
        <i class="bi bi-cart"></i> Carrinho
    </a>

    <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content" style="border-radius: 20px;">
                <div class="modal-header">
                    <h5 class="modal-title">🛍️ Seu Carrinho</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="cart-items"></div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <strong>Total: <span id="cart-total">R$0,00</span></strong>
                    <button class="btn btn-success" onclick="window.location.href='https://wa.me/SEUNUMERO?text=Pedido%20SempreBella'">
                        Finalizar Pedido <i class="bi bi-whatsapp"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
